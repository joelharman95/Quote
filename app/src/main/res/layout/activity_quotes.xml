<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_small"
    tools:context=".view.QuotesActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small"
        android:src="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_extra_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:gravity="center"
        android:text="@string/label_quotes_collection"
        android:textColor="@color/black"
        android:textSize="@dimen/size_30"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/label_quotes_collection_count"
        app:layout_constraintEnd_toEndOf="@id/tvQuote"
        app:layout_constraintStart_toStartOf="@id/tvQuote"
        app:layout_constraintTop_toBottomOf="@id/tvQuote" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/search_view_border"
        android:hint="@string/hint_search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingStart="@dimen/spacing_medium"
        app:layout_constraintCircleRadius="@dimen/spacing_small"
        app:layout_constraintEnd_toEndOf="@id/tvQuote"
        app:layout_constraintStart_toStartOf="@id/tvQuote"
        app:layout_constraintTop_toBottomOf="@+id/tvCount" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_small"
        android:padding="@dimen/spacing_small"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/etSearch"
        app:layout_constraintEnd_toEndOf="@id/etSearch"
        app:layout_constraintTop_toTopOf="@id/etSearch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/spacing_extra_large"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:spanCount="2"
        tools:itemCount="11"
        tools:listitem="@layout/layout_category_item" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoQuotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No quotes available"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rvQuotes"
        app:layout_constraintEnd_toEndOf="@id/rvQuotes"
        app:layout_constraintStart_toStartOf="@id/rvQuotes"
        app:layout_constraintTop_toTopOf="@id/rvQuotes" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small"
        android:text="@string/action_back_to_top"
        android:textColor="@color/black"
        app:backgroundTint="@color/card_bg"
        app:cornerRadius="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@id/rvQuotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>